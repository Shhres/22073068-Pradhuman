@page "/CashOutflow"

<h3 class="text-3xl font-bold mb-6 text-center text-indigo-700">Cash Outflow</h3>

<form method="post" action="/submit-cashoutflow" class="space-y-6 bg-white p-8 rounded-lg shadow-lg max-w-lg mx-auto">
    <div>
        <label for="amount" class="block text-lg font-medium text-gray-800">Amount:</label>
        <input type="text" id="amount" name="amount" required 
               class="mt-2 block w-full px-4 py-3 border-2 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:border-indigo-600" />
    </div>

    <div>
        <label for="description" class="block text-lg font-medium text-gray-800">Description:</label>
        <textarea id="description" name="description" rows="4" required 
                  class="mt-2 block w-full px-4 py-3 border-2 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:border-indigo-600"></textarea>
    </div>

    <div>
        <label for="label" class="block text-lg font-medium text-gray-800">Label:</label>
        <input type="text" id="label" name="label" required 
               class="mt-2 block w-full px-4 py-3 border-2 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:border-indigo-600" />
    </div>

    <div class="flex justify-center">
        <button type="submit" class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-full shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-300 ease-in-out transform hover:scale-105">
            Submit
        </button>
    </div>
</form>

<script>
    // Prevent form submission for debugging purposes
    document.querySelector('#cash-outflow-form').addEventListener('submit', function (e) {
        e.preventDefault(); // Prevent actual form submission
        alert('Form submitted successfully!');
    });
</script>
