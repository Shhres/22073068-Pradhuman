@page "/dashboard"
@inject NavigationManager Navigation

<div class="container-fluid p-0">
    <!-- Header Section -->
    <div class="text-center py-3 bg-primary">
        <h1 class="mb-0" style="color: black; font-weight: bold;">Dashboard</h1>
        <p class="mt-1" style="color: black; font-weight: bold;">A summary of your financial details</p>
    </div>

    <!-- Total and Loan Amount Section -->
    <div class="py-5 bg-white">
        <div class="row mx-3">
            <!-- Left Side: Total Amount -->
            <div class="col-md-6 text-end mb-4">
                <h5>Total Amount</h5>
                <div class="d-flex justify-content-end align-items-center">
                    <span class="h4">
                        @if (isAmountVisible)
                        {
                                    <span>@($"${totalAmount:F2}")</span>
                        }
                        else
                        {
                                    <span>••••••</span>
                        }
                    </span>
                    <button class="btn btn-link" @onclick="ToggleAmountVisibility">
                        @if (isAmountVisible)
                        {
                                    <i class="bi bi-eye-slash text-dark"></i>
                        }
                        else
                        {
                                    <i class="bi bi-eye text-dark"></i>
                        }
                    </button>
                </div>
            </div>

            <!-- Right Side: Loan Amount -->
            <div class="col-md-6 text-end mb-4">
                <h5>Loan Amount</h5>
                <div class="d-flex justify-content-end align-items-center">
                    <span class="h4">
                        @if (isLoanVisible)
                        {
                                    <span>@($"${loanAmount:F2}")</span>
                        }
                        else
                        {
                                    <span>••••••</span>
                        }
                    </span>
                    <button class="btn btn-link" @onclick="ToggleLoanVisibility">
                        @if (isLoanVisible)
                        {
                                    <i class="bi bi-eye-slash text-dark"></i>
                        }
                        else
                        {
                                    <i class="bi bi-eye text-dark"></i>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Background Section -->
    <div class="vh-50" style="background-image: url('css/dotnet.jpg'); background-size: cover; background-position: center; height: 50vh;">
        <!-- Empty content; image serves as decoration -->
    </div>
</div>

@code {
    private bool isAmountVisible = false;
    private bool isLoanVisible = false;

    private decimal totalAmount = 1000.00m;
    private decimal loanAmount = 500.00m;

    private void ToggleAmountVisibility()
    {
        isAmountVisible = !isAmountVisible;
    }

    private void ToggleLoanVisibility()
    {
        isLoanVisible = !isLoanVisible;
    }
}
