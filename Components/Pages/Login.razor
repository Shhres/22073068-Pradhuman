

@page "/"
@using MauiApp1.Models
@inject UserService UserService
@inject NavigationManager NavigationManager
@using MauiApp1.Components.Layout
@layout FirstLayout

<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-blue-500 via-purple-600 to-pink-500">
    <div class="bg-white shadow-lg rounded-lg p-8 w-96 max-w-lg">
        <h3 class="text-3xl font-semibold text-center text-gray-800 mb-6">Welcome Back</h3>

        @if (!string.IsNullOrEmpty(Message))
        {
            <p class="text-red-500 text-sm mb-4 text-center">@Message</p>
        }

        <div class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700" for="username">Username</label>
                <input id="username" @bind="LoginUsername" placeholder="Enter your username"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700" for="password">Password</label>
                <input id="password" @bind="LoginPassword" placeholder="Enter your password" type="password"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700" for="currency">Currency</label>
                <select id="currency" @bind="SelectedCurrency"
                        class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300">
                    <option value="NPR">NPR</option>
                    <option value="USD">USD</option>
                    <option value="INR">INR</option>
                </select>
            </div>

            <button @onclick="LoginPage"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300">
                Login
            </button>

            <div class="text-center mt-6">
                <a href="/register" class="text-blue-600 hover:text-blue-700 hover:underline">Don't have an account? Register</a>
            </div>
        </div>
    </div>
</div>