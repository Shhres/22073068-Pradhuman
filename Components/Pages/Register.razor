@page "/register"
@using MauiApp1.Models
@inject UserService UserService
@inject NavigationManager NavigationManager
@using MauiApp1.Components.Layout
@layout FirstLayout

<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500">
    <div class="bg-white bg-opacity-20 backdrop-blur-lg shadow-xl rounded-3xl p-12 w-96 max-w-lg border border-white border-opacity-40 transform transition-all hover:scale-105">
        <h4 class="text-3xl font-extrabold text-center text-white mb-8">Create Your Account</h4>

        @if (!string.IsNullOrEmpty(Message))
        {
            <p class="text-red-300 text-sm mb-6 text-center">@Message</p>
        }

        <div class="space-y-8">
            <!-- Full Name -->
            <div>
                <label class="block text-lg font-medium text-white" for="fullName">Full Name</label>
                <div class="relative mt-2">
                    <input id="fullName" @bind="RegisterFullName" placeholder="Enter your full name"
                           class="w-full px-6 py-4 pl-12 border-2 border-white bg-transparent rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-500 transition duration-300 placeholder:text-white/70" />
                    <span class="absolute inset-y-0 left-4 flex items-center text-white opacity-60">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>

            <!-- Contact Number -->
            <div>
                <label class="block text-lg font-medium text-white" for="contactNumber">Contact Number</label>
                <div class="relative mt-2">
                    <input id="contactNumber" @bind="RegisterContactNumber" placeholder="Enter your contact number" type="tel"
                           class="w-full px-6 py-4 pl-12 border-2 border-white bg-transparent rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-500 transition duration-300 placeholder:text-white/70" />
                    <span class="absolute inset-y-0 left-4 flex items-center text-white opacity-60">
                        <i class="fas fa-phone"></i>
                    </span>
                </div>
            </div>

            <!-- Username -->
            <div>
                <label class="block text-lg font-medium text-white" for="username">Username</label>
                <div class="relative mt-2">
                    <input id="username" @bind="RegisterUsername" placeholder="Enter your username"
                           class="w-full px-6 py-4 pl-12 border-2 border-white bg-transparent rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-500 transition duration-300 placeholder:text-white/70" />
                    <span class="absolute inset-y-0 left-4 flex items-center text-white opacity-60">
                        <i class="fas fa-user-circle"></i>
                    </span>
                </div>
            </div>

            <!-- Password -->
            <div>
                <label class="block text-lg font-medium text-white" for="password">Password</label>
                <div class="relative mt-2">
                    <input id="password" @bind="RegisterPassword" placeholder="Enter your password" type="password"
                           class="w-full px-6 py-4 pl-12 border-2 border-white bg-transparent rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-500 transition duration-300 placeholder:text-white/70" />
                    <span class="absolute inset-y-0 left-4 flex items-center text-white opacity-60">
                        <i class="fas fa-lock"></i>
                    </span>
                </div>
            </div>

            <!-- Confirm Password -->
            <div>
                <label class="block text-lg font-medium text-white" for="confirmPassword">Confirm Password</label>
                <div class="relative mt-2">
                    <input id="confirmPassword" @bind="ConfirmPassword" placeholder="Confirm your password" type="password"
                           class="w-full px-6 py-4 pl-12 border-2 border-white bg-transparent rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-500 transition duration-300 placeholder:text-white/70" />
                    <span class="absolute inset-y-0 left-4 flex items-center text-white opacity-60">
                        <i class="fas fa-lock"></i>
                    </span>
                </div>
            </div>

            <!-- Email -->
            <div>
                <label class="block text-lg font-medium text-white" for="email">Email</label>
                <div class="relative mt-2">
                    <input id="email" @bind="RegisterEmail" @oninput="ValidateEmail" placeholder="Enter your email" type="email"
                           class="w-full px-6 py-4 pl-12 border-2 border-white bg-transparent rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-500 transition duration-300 placeholder:text-white/70" />
                    <span class="absolute inset-y-0 left-4 flex items-center text-white opacity-60">
                        <i class="fas fa-envelope"></i>
                    </span>
                </div>
                @if (!IsEmailValid)
                {
                    <p class="text-red-300 text-sm mt-2">Please enter a valid email address.</p>
                }
            </div>

            <!-- Register Button -->
            <button @onclick="HandleRegistration"
                    class="w-full bg-gradient-to-r from-green-500 via-teal-500 to-blue-500 hover:from-green-600 hover:to-blue-600 text-white py-4 rounded-lg shadow-lg focus:outline-none focus:ring-4 focus:ring-blue-500 transition duration-300"
                    disabled="@(IsEmailValid == false)">
                Register
            </button>

            <div class="text-center mt-6">
                <a href="/" class="text-white/70 hover:text-white hover:underline transition duration-200">Already have an account? Login</a>
            </div>
        </div>
    </div>
</div>
