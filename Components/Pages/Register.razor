
@page "/register"
@using MauiApp1.Models
@inject UserService UserService
@inject NavigationManager NavigationManager
@using MauiApp1.Components.Layout
@layout FirstLayout

<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-green-500 via-teal-600 to-blue-500">
    <div class="bg-white shadow-lg rounded-lg p-8 w-96 max-w-lg">
        <h3 class="text-3xl font-semibold text-center text-gray-800 mb-6">Create Account</h3>

        @if (!string.IsNullOrEmpty(Message))
        {
            <p class="text-red-500 text-sm mb-4 text-center">@Message</p>
        }

        <div class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700" for="fullName">Full Name</label>
                <input id="fullName" @bind="RegisterFullName" placeholder="Enter your full name"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-300" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700" for="contactNumber">Contact Number</label>
                <input id="contactNumber" @bind="RegisterContactNumber" placeholder="Enter your contact number" type="tel"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-300" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700" for="username">Username</label>
                <input id="username" @bind="RegisterUsername" placeholder="Enter your username"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-300" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700" for="password">Password</label>
                <input id="password" @bind="RegisterPassword" placeholder="Enter your password" type="password"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-300" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700" for="confirmPassword">Confirm Password</label>
                <input id="confirmPassword" @bind="ConfirmPassword" placeholder="Confirm your password" type="password"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-300" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700" for="email">Email</label>
                <input id="email" @bind="RegisterEmail" @oninput="ValidateEmail" placeholder="Enter your email" type="email"
                       class="mt-1 w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-300" />
                @if (!IsEmailValid)
                {
                    <p class="text-red-500 text-sm mt-2">Please enter a valid email address.</p>
                }
            </div>

            <button @onclick="HandleRegistration"
                    class="w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-green-400 transition duration-300"
                    disabled="@(IsEmailValid == false)">
                Register
            </button>

            <div class="text-center mt-6">
                <a href="/" class="text-green-600 hover:text-green-700 hover:underline">Already have an account? Login</a>
            </div>
        </div>
    </div>
</div>